[Unit]
Description=HAProxy Service
Documentation=http://www.haproxy.org/download/1{{ haproxy_version }}/doc/configuration.txt
Wants=basic.target
After=basic.target network.target

[Service]
Type=simple
PIDFile={{ haproxy_run_dir }}/haproxy.pid
User={{ haproxy_user }} 
Group={{ haproxy_group}} 
ExecStart=su - $USER -c '/usr/local/sbin/haproxy -f {{ haproxy_config_dir}} -D -p $PID_FILE >{{ haproxy_log_dir }}/haproxy.log 2>{{ haproxy_log_dir }}/haproxy.error.log!'
ExecStop=for PID in $(cat $PIDFile); do /bin/kill $PID; done
KillMode=process
Restart=on-failure
RestartSec=60s

[Install]
WantedBy=multi-user.target